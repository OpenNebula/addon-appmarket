if [ -z "$ONE_LOCATION" ]; then
    APPCONVERTER_PID=/var/run/one/appconverter-server.pid
    APPCONVERTER_SERVER=/usr/lib/one/ruby/appconverter/controllers/appconverter-server.rb
    APPCONVERTER_LOCK_FILE=/var/lock/one/.appconverter.lock
    APPCONVERTER_LOG=/var/log/one/appconverter-server.log
    APPCONVERTER_LOG_ERROR=/var/log/one/appconverter-server.error
    APPCONVERTER_ETC=/etc/one/appconverter-server.conf
else
    APPCONVERTER_PID=$ONE_LOCATION/var/appconverter-server.pid
    APPCONVERTER_SERVER=$ONE_LOCATION/lib/ruby/appconverter/controllers/appconverter-server.rb
    APPCONVERTER_LOCK_FILE=$ONE_LOCATION/var/.appconverter.lock
    APPCONVERTER_LOG=$ONE_LOCATION/var/appconverter-server.log
    APPCONVERTER_LOG_ERROR=$ONE_LOCATION/var/appconverter-server.error
    APPCONVERTER_ETC=$ONE_LOCATION/etc/appconverter-server.conf
fi

setup()
{
  if [ -f $APPCONVERTER_LOCK_FILE ]; then
    if [ -f  $APPCONVERTER_PID ]; then
      APPCONVERTERPID=`cat $APPCONVERTER_PID`
      ps $APPCONVERTERPID > /dev/null 2>&1
      if [ $? -eq 0 ]; then
        echo "APPCONVERTER Server is still running (PID:$APPCONVERTERPID). Please try 'appconverter-server stop' first."
        exit 1
      fi
    fi
    echo "Stale .lock detected. Erasing it."
    rm $APPCONVERTER_LOCK_FILE
  fi
}

start()
{
  if [ ! -f "$APPCONVERTER_SERVER" ]; then
    echo "Cannot find $APPCONVERTER_SERVER."
    exit 1
  fi

  touch $APPCONVERTER_LOCK_FILE

  # Start the appconverter-server daemon
  ruby $APPCONVERTER_SERVER >$APPCONVERTER_LOG 2>$APPCONVERTER_LOG_ERROR &

  LASTRC=$?
  LASTPID=$!

  if [ $LASTRC -ne 0 ]; then
        echo "Error executing appconverter-server."
        echo "Check $APPCONVERTER_LOG for more information"
    exit 1
  else
    echo $LASTPID > $APPCONVERTER_PID
  fi

  sleep 2
  ps $LASTPID > /dev/null 2>&1

  if [ $? -ne 0 ]; then
        echo "Error executing appconverter-server."
        echo "Check $APPCONVERTER_LOG_ERROR or $APPCONVERTER_LOG for more information"
    exit 1
  fi

  echo "appconverter-server started"
}

#
# Function that stops the daemon/service
#
stop()
{
  if [ ! -f $APPCONVERTER_PID ]; then
    echo "Couldn't find appconverter-server process pid."
    exit 1
  fi

  # Kill the appconverter-server daemon

  kill -INT `cat $APPCONVERTER_PID` > /dev/null 2>&1

  # Remove pid files
  rm -f $APPCONVERTER_PID > /dev/null 2>&1
  rm -f $APPCONVERTER_LOCK_FILE &> /dev/null

  echo "appconverter-server stopped"
}


case "$1" in
  start)
  setup
  start
  ;;
  stop)
  stop
  ;;
  *)
  echo "Usage: appconverter-server {start|stop}" >&2
  exit 3
  ;;
esac


